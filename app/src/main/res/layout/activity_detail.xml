<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity"
        android:layoutDirection="rtl"
        android:background="@color/colorPrimaryDark">

    <android.support.v4.widget.NestedScrollView
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
                android:padding="8dp"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                    android:padding="5dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:paddingStart="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:background="@color/colorPrimary"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="8dp">

                    <TextView
                            android:background="@drawable/textview_shape"
                            android:padding="5dp"
                            android:text="عنوان"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/titleLabel"/>
                    <TextView
                            android:layout_alignBaseline="@id/titleLabel"
                            android:background="@drawable/textview_shape_second"
                            android:padding="5dp"
                            android:layout_marginStart="8dp"
                            android:layout_toEndOf="@id/titleLabel"
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/titleView"
                            android:layout_marginLeft="8dp" android:layout_toRightOf="@id/titleLabel"/>
                    <TextView
                            android:layout_marginTop="8dp"
                            android:background="@drawable/textview_shape"
                            android:padding="5dp"
                            android:layout_below="@id/titleLabel"
                            android:text="سال ساخت"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/yearLabel"/>

                    <TextView
                            android:background="@drawable/textview_shape_second"
                            android:layout_marginStart="8dp"
                            android:layout_alignBaseline="@id/yearLabel"
                            android:layout_toEndOf="@id/yearLabel"
                            android:padding="5dp"
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/yearView"
                            android:layout_marginLeft="8dp" android:layout_toRightOf="@id/yearLabel"/>

                    <TextView
                            android:layout_marginTop="8dp"
                            android:background="@drawable/textview_shape"
                            android:layout_below="@id/yearLabel"
                            android:padding="5dp"
                            android:text="انتشار"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/releasedLabel"/>

                    <TextView
                            android:background="@drawable/textview_shape_second"
                            android:layout_marginStart="8dp"
                            android:layout_alignBaseline="@id/releasedLabel"
                            android:layout_toEndOf="@id/releasedLabel"
                            android:padding="5dp"
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/releasedView"
                            android:layout_marginLeft="8dp" android:layout_toRightOf="@id/releasedLabel"/>
                    <TextView
                            android:background="@drawable/textview_shape"
                            android:layout_marginStart="8dp"
                            android:layout_alignBaseline="@id/yearLabel"
                            android:layout_toEndOf="@id/yearView"
                            android:padding="5dp"
                            android:text="مدت"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/runtimeLabel"
                            android:layout_marginLeft="8dp" android:layout_toRightOf="@id/yearView"/>
                    <TextView
                            android:background="@drawable/textview_shape_second"
                            android:layout_marginStart="8dp"
                            android:layout_alignBaseline="@id/yearLabel"
                            android:layout_toEndOf="@id/runtimeLabel"
                            android:padding="5dp"
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/runtimeView"
                            android:layout_marginLeft="8dp" android:layout_toRightOf="@id/runtimeLabel"/>

                    <TextView
                            android:background="@drawable/textview_shape"
                            android:layout_marginStart="8dp"
                            android:layout_alignBaseline="@id/releasedView"
                            android:layout_toEndOf="@id/releasedView"
                            android:padding="5dp"
                            android:text="ژانر"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/genrLabel"
                            android:layout_marginLeft="8dp" android:layout_toRightOf="@id/releasedView"/>

                    <TextView
                            android:background="@drawable/textview_shape_second"
                            android:layout_marginStart="8dp"
                            android:layout_alignBaseline="@id/genrLabel"
                            android:layout_toEndOf="@id/genrLabel"
                            android:padding="5dp"
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/genrView"
                            android:layout_marginLeft="8dp" android:layout_toRightOf="@id/genrLabel"/>


                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
